void sort(int a[], int n)
{
    
    int i,zero,one,two;
    zero=0;
    one=0;
    two=0;
    for(i=0;i<n;i++)
    {
        if(a[i]==0)
        {
            zero++;
         }
         else if(a[i]==1)
         {
             one++;
         }
         else{
             two++;
         }
    }
     for(i=0;i<zero;i++)
    {
        a[i]=0;
    
    }
    for(i=zero;i<zero+one;i++)
    {
        a[i]=1;
    
    }
    for(i=zero+one;i<n;i++)
    {
        a[i]=2;
    
    }
}
